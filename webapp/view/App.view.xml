<mvc:View
    controllerName="com.devjero.forms.forms.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">

    <App id="app">
        <Page id="pageMain" title="Formulario MVC">

            <!-- ========================= -->
            <!-- DATOS PERSONALES -->
            <!-- ========================= -->
            <VBox id="vbPersonal" class="sapUiSmallMargin">

                <form:SimpleForm
                    id="sfPersonal"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="1"
                    columnsL="2"
                    columnsXL="2">

                    <form:content>

                        <core:Title id="_IDGenTitle" text="Information" />

                        <Label id="_IDGenLabel" text="Name" />
                        <Input id="_IDGenInput1" value="{/forms/0/name}" required="true" change="onChange" />

                        <Label id="_IDGenLabel1" text="Street / Number" />
                        <Input id="_IDGenInput2" value="{/forms/0/street/name}">
                            <layoutData>
                                <form:ColumnElementData id="_IDGenColumnElementData" cellsLarge="5" />
                            </layoutData>
                        </Input>

                        <Input id="_IDGenInput3" value="{/forms/0/street/number}">
                            <layoutData>
                                <form:ColumnElementData id="_IDGenColumnElementData1" cellsLarge="3" />
                            </layoutData>
                        </Input>

                        <Label id="_IDGenLabel2" text="ZIP / City" />
                        <Input id="_IDGenInput4" value="{/forms/0/zip/code}">
                            <layoutData>
                                <form:ColumnElementData id="_IDGenColumnElementData2" cellsLarge="3" />
                            </layoutData>
                        </Input>

                        <Input id="_IDGenInput5" value="{/forms/0/zip/city}" />

                        <Label id="_IDGenLabel3" text="Country" />
                        <Select id="_IDGenSelect" selectedKey="{/forms/0/country}">
                            <items>
                                <core:Item id="_IDGenItem" text="England" key="EN" />
                                <core:Item id="_IDGenItem1" text="Germany" key="DE" />
                                <core:Item id="_IDGenItem2" text="USA" key="US" />
                            </items>
                        </Select>

                        <core:Title id="_IDGenTitle1" text="Contact" />

                        <Label id="_IDGenLabel4" text="Email" />
                        <Input id="_IDGenInput6" value="{/forms/0/email}" change="onChange" />

                        <Label id="_IDGenLabel5" text="Phone" />
                        <Input id="_IDGenInput7" value="{/forms/0/phone/number}" />

                        <Label id="_IDGenLabel6" text="Website" />
                        <Input id="_IDGenInput8" value="{/forms/0/website}" />

                    </form:content>
                </form:SimpleForm>
            </VBox>

            <!-- ========================= -->
            <!-- DATOS LABORALES -->
            <!-- ========================= -->
            <VBox id="vbEmployment" class="sapUiSmallMargin">

                <form:SimpleForm
                    id="sfEmployment"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="1"
                    columnsL="2"
                    columnsXL="2">

                    <form:content>

                        <core:Title id="_IDGenTitle2" text="Position" />

                        <Label id="_IDGenLabel7" text="Job Title" />
                        <Input id="_IDGenInput9" value="{/employment/0/jobTitle}" />

                        <Label id="_IDGenLabel8" text="Pay Grade" />
                        <Input id="_IDGenInput10" value="{/employment/0/payGrade}" />

                        <Label id="_IDGenLabel9" text="Unit" />
                        <Input id="_IDGenInput11" value="{/employment/0/unit}" />

                        <core:Title id="_IDGenTitle3" text="Rating" />

                        <Label id="_IDGenLabel10" text="Employee Class" />
                        <Input id="_IDGenInput12" value="{/employment/0/class}" />

                        <Label id="_IDGenLabel11" text="FTE" />
                        <Input id="_IDGenInput13" value="{/employment/0/fte}" />

                        <Label id="_IDGenLabel12" text="Weekly Hours" />
                        <Input id="_IDGenInput14" value="{/employment/0/weeklyHours}" change="onChange" />

                    </form:content>
                </form:SimpleForm>
            </VBox>

            <footer>
                <OverflowToolbar id="footer">
                    <Button 
                        id="messagePopover" 
                        press=".handleMessagePopover"
                        icon="{ path : '/', formatter : '.mpIconFormatter'}"    
                        type="{ path : '/', formatter : '.mpTypeFormatter'}" 
                        text="{ path : '/', formatter : '.mpSeverityMessages'}" 
                    ></Button>
                    
                    <!--Mover estos 2 a la derecha-->
                    <ToolbarSpacer id="rigthButtons"></ToolbarSpacer>
                    <Button id="saveButton" text="Save" press="saveData" type="Emphasized"></Button>
                    <Button id="cancelButton" text="Cancel"></Button>
                </OverflowToolbar>
            </footer>

        </Page>
    </App>
</mvc:View>
