<mvc:View
    controllerName="com.devjero.forms.forms.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">

    <App id="app">
        <Page id="pageMain" title="Formulario MVC">

            <!-- ========================= -->
            <!-- DATOS PERSONALES -->
            <!-- ========================= -->
            <VBox id="vbPersonal" class="sapUiSmallMargin">

                <form:SimpleForm
                    id="sfPersonal"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="1"
                    columnsL="2"
                    columnsXL="2">

                    <form:content>

                        <core:Title text="Information" />

                        <Label text="Name" />
                        <Input value="{/forms/0/name}" />

                        <Label text="Street / Number" />
                        <Input value="{/forms/0/street/name}">
                            <layoutData>
                                <form:ColumnElementData cellsLarge="5" />
                            </layoutData>
                        </Input>

                        <Input value="{/forms/0/street/number}">
                            <layoutData>
                                <form:ColumnElementData cellsLarge="3" />
                            </layoutData>
                        </Input>

                        <Label text="ZIP / City" />
                        <Input value="{/forms/0/zip/code}">
                            <layoutData>
                                <form:ColumnElementData cellsLarge="3" />
                            </layoutData>
                        </Input>

                        <Input value="{/forms/0/zip/city}" />

                        <Label text="Country" />
                        <Select selectedKey="{/forms/0/country}">
                            <items>
                                <core:Item text="England" key="EN" />
                                <core:Item text="Germany" key="DE" />
                                <core:Item text="USA" key="US" />
                            </items>
                        </Select>

                        <core:Title text="Contact" />

                        <Label text="Email" />
                        <Input value="{/forms/0/email}" />

                        <Label text="Phone" />
                        <Input value="{/forms/0/phone/number}" />

                        <Label text="Website" />
                        <Input value="{/forms/0/website}" />

                    </form:content>
                </form:SimpleForm>
            </VBox>

            <!-- ========================= -->
            <!-- DATOS LABORALES -->
            <!-- ========================= -->
            <VBox id="vbEmployment" class="sapUiSmallMargin">

                <form:SimpleForm
                    id="sfEmployment"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="1"
                    columnsL="2"
                    columnsXL="2">

                    <form:content>

                        <core:Title text="Position" />

                        <Label text="Job Title" />
                        <Input value="{/employment/0/jobTitle}" />

                        <Label text="Pay Grade" />
                        <Input value="{/employment/0/payGrade}" />

                        <Label text="Unit" />
                        <Input value="{/employment/0/unit}" />

                        <core:Title text="Rating" />

                        <Label text="Employee Class" />
                        <Input value="{/employment/0/class}" />

                        <Label text="FTE" />
                        <Input value="{/employment/0/fte}" />

                        <Label text="Weekly Hours" />
                        <Input value="{/employment/0/weeklyHours}" />

                    </form:content>
                </form:SimpleForm>
            </VBox>

            <footer>
                <OverflowToolbar id="footer">
                    <Button 
                        id="messagePopover" 
                        text="Messages" 
                        press=".handleMessagePopover"
                        icon="{ path : '/', formatter : '.mpIconFormatter'}"    
                    ></Button>
                    <!--Mover estos 2 a la derecha-->
                    <ToolbarSpacer id="rigthButtons"></ToolbarSpacer>
                    <Button id="saveButton" text="Save" press="saveData" type="Emphasized"></Button>
                    <Button id="cancelButton" text="Cancel"></Button>
                </OverflowToolbar>
            </footer>

        </Page>
    </App>
</mvc:View>
