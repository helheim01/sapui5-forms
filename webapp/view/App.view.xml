<mvc:View
    controllerName="com.devjero.forms.forms.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">

    <!-- ========================= -->
    <!-- APLICACIÓN PRINCIPAL -->
    <!-- ========================= -->
    <App id="app">
        <Page id="pageMain" title="Formulario MVC">

            <!-- ========================= -->
            <!-- FORMULARIO: DATOS PERSONALES -->
            <!-- ========================= -->
            <VBox id="vbPersonal" class="sapUiSmallMargin">

                <form:SimpleForm
                    id="sfPersonal"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="1"
                    columnsL="2"
                    columnsXL="2">

                    <form:content>

                        <!-- INFORMACIÓN PERSONAL -->
                        <core:Title id="ttlPersonalInfo" text="Information" />

                        <!-- NAME -->
                        <Label id="lblName" text="Name" />
                        <Input
                            id="inpName"
                            placeholder="Juan"
                            required="true"
                            change="onChange"
                            value="{path: 'name', type: 'sap.ui.model.type.String'}" />

                        <!-- STREET + NUMBER -->
                        <Label id="lblStreetNumber" text="Street / Number" />

                        <Input
                            id="inpStreet"
                            placeholder="Educadores"
                            value="{street/name}">
                            <layoutData>
                                <form:ColumnElementData id="largeStreet" cellsLarge="7" />
                            </layoutData>
                        </Input>

                        <Input
                            id="inpStreetNumber"
                            placeholder="1970"
                            value="{street/number}">
                            <layoutData>
                                <form:ColumnElementData id="largeStreetNumber" cellsLarge="3" />
                            </layoutData>
                        </Input>

                        <!-- ZIP / CITY -->
                        <Label id="lblZipCity" text="ZIP Code / City" />
                        <Input
                            id="inpZip"
                            value="{path: 'zip/code', type: 'sap.ui.model.type.Integer'}">
                            <layoutData>
                                <form:ColumnElementData id="largeZip" cellsLarge="3" />
                            </layoutData>
                        </Input>

                        <Input
                            id="inpCity"
                            value="{zip/city}" />

                        <!-- COUNTRY -->
                        <Label id="lblCountry" text="Country" />
                        <Select
                            id="selCountry"
                            selectedKey="{country}">
                            <items>
                                <core:Item id="countryEN" text="England" key="EN" />
                                <core:Item id="countryDE" text="Germany" key="DE" />
                                <core:Item id="countryUS" text="USA" key="US" />
                            </items>
                        </Select>

                        <!-- CONTACT -->
                        <core:Title id="ttlContact" text="Contact" />

                        <!-- EMAIL -->
                        <Label id="lblEmail" text="Email" />
                        <Input
                            id="inpEmail"
                            placeholder="correo@ejemplo.com"
                            value="{path: 'email', type: 'sap.ui.model.type.String', constraints:{
                                search: '^\\w+[\\-+]*\\@[a-zA-Z]+.[a-zA-Z]+'
                            }}" />

                        <!-- PHONE -->
                        <Label id="lblPhone" text="Phone" />

                        <Input
                            id="inpPhoneCode"
                            placeholder="+54"
                            value="{phone/code}">
                            <layoutData>
                                <form:ColumnElementData id="largePhoneCode" cellsLarge="2" />
                            </layoutData>
                        </Input>

                        <Input
                            id="inpPhoneNumber"
                            placeholder="2616728328"
                            value="{phone/number}">
                            <layoutData>
                                <form:ColumnElementData id="largePhoneNumber" cellsLarge="4" />
                            </layoutData>
                        </Input>

                        <!-- WEBSITE -->
                        <Label id="lblWebsite" text="Personal Website" />
                        <Input
                            id="inpWebsite"
                            value="{website}" />

                    </form:content>
                </form:SimpleForm>
            </VBox>

            <!-- ========================= -->
            <!-- FORMULARIO: DATOS LABORALES -->
            <!-- ========================= -->
            <VBox id="vbEmployment" class="sapUiSmallMargin">

                <form:SimpleForm
                    id="sfEmployment"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="1"
                    columnsL="2"
                    columnsXL="2">

                    <form:content>

                        <!-- POSITION -->
                        <core:Title id="ttlPosition" text="Position" />

                        <Label id="lblJobTitle" text="Job Classification" />
                        <Input id="inpJobTitle" value="{jobtitle}" />

                        <Label id="lblPayGrade" text="Pay Grade" />
                        <Input id="inpPayGrade" value="{payGrade}" />

                        <Label id="lblUnit" text="Unit" />
                        <Input id="inpUnit" value="{unit}" />

                        <!-- RATING -->
                        <core:Title id="ttlRating" text="Rating" />

                        <Label id="lblEmployeeClass" text="Employee Class" />
                        <Input
                            id="inpEmployeeClass"
                            value="{class}" />

                        <Label id="lblFTE" text="FTE (Full Time Equivalent)" />
                        <Input
                            id="inpFTE"
                            value="{fte}" />

                        <Label id="lblWeeklyHours" text="Standard Weekly Hours" />
                        <Input
                            id="inpWeeklyHours"
                            change="onChange"
                            value="{path: 'weeklyHours', type: 'sap.ui.model.type.Integer', constraints:  {
                                maximum: 40
                            }}" />

                    </form:content>
                </form:SimpleForm>
            </VBox>

            <footer>
                <OverflowToolbar id="footer">
                    <Button id="mesasagePopover" text="Messages" press=".handleMessagePopover"></Button>
                    <!--Mover estos 2 a la derecha-->
                    <ToolbarSpacer id="rigthButtons" ></ToolbarSpacer>
                    <Button id="saveButton" text="Save" press="saveData" type="Emphasized"></Button>
                    <Button id="cancelButton" text="Cancel"></Button>
                </OverflowToolbar>
            </footer>

        </Page>
    </App>
</mvc:View>
